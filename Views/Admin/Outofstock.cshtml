@model IEnumerable<BookStoreMVC.Models.Book>

@{

    ViewData["Title"] = "Out Of Stock";

    // Use admin layout for this page

    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<h2 class="mb-3">Out Of Stock</h2>


<div class="table-responsive card p-2 p-md-3 product-card">
    <table class="table align-middle mb-0">
        <thead class="table-light">
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Price</th>
                <th>CategoryId</th>
                <th>Add Book</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var book in Model)

            {
                <tr>
                    <td>@book.Id</td>
                    <td>@book.Title</td>
                    <td>@book.Price</td>
                    <td>@book.CategoryId</td>
                    <td>
                        <a asp-controller="Books" asp-action="Edit" asp-route-id="@book.Id" class="btn btn-sm bg-primary"> Add Quantity </a>
                    </td>

                </tr>

            }
        </tbody>
    </table>
</div>