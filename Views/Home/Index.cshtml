@model IEnumerable<BookStoreMVC.Models.Book>
@{
    ViewData["Title"] = "Home";
}
<link href="css/site.css" rel="stylesheet" />
<!-- Hero section for landing page -->
<div class="hero-section hero mb-4 text-center">
    <h1 class="mb-1">Discover your next favorite book</h1>
    <p class="lead mb-0">Great prices • Fast checkout • Trusted selections</p>
    <a class="btn btn-light btn-lg mt-3" asp-controller="Books" asp-action="Index">Shop Now</a>
</div>



<!-- Featured books grid -->
<div class="row g-3">
    @foreach (var book in Model)
    {
        <div class="col-6 col-md-4 col-lg-3">
            <div class="card product-card h-100">
                <img class="product-img" src="@(string.IsNullOrWhiteSpace(book.ImageUrl) ? Url.Content("~/images/default-book.png") : book.ImageUrl)" alt="@book.Title" />
                <div class="card-body d-flex flex-column">
                    <div class="product-title text-truncate mb-1">@book.Title</div>
                    <div class="text-muted truncate-2 mb-2">@book.Description</div>
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <div class="product-price">₹@book.Price.ToString("0.00")</div>
                        <span class="badge badge-category">@book.Category?.Name</span>
                    </div>
                    <div class="mt-auto d-grid gap-2">
                        <a class="btn btn-primary btn-rounded" asp-controller="Books" asp-action="Details" asp-route-id="@book.Id">
                            <i class="bi bi-book me-1"></i> Details
                        </a>
                        @if (book.StockQuantity > 0)
                        {
                            <a class="btn btn-outline-primary btn-rounded" asp-controller="Cart" asp-action="Add" asp-route-bookId="@book.Id" asp-route-goToCart="true">
                                <i class="bi bi-cart-plus me-1"></i> Add to Cart
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>