@using System.Security.Claims
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpCtx

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - BOOKORY</title>
    <link rel="shortcut icon" href="~/images/favicon.png" type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" asp-controller="" asp-action="">
                <img src="~/images/logo-bookory.svg" alt="BOOKORY" height="28" class="me-2" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                    aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="mainNav" class="collapse navbar-collapse">

                @* ==================== UPDATED NAVIGATION BLOCK START ==================== *@
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    @if (User.Identity?.IsAuthenticated == true && User.IsInRole("ADMIN"))
                    {
                        // ADMIN NAVIGATION
                        <li class="nav-item"><a asp-controller="Admin" asp-action="Dashboard" class="nav-link">Dashboard</a></li>
                        <li class="nav-item"><a asp-controller="Books" asp-action="Index" class="nav-link">Manage Books</a></li>
                        <li class="nav-item"><a asp-controller="Orders" asp-action="Index" class="nav-link">Manage Orders</a></li>
                        <li class="nav-item"><a asp-controller="Admin" asp-action="Users" class="nav-link">Manage Customers</a></li>
                    }
                    else
                    {
                        // STANDARD USER & GUEST NAVIGATION
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Books" asp-action="Index">Books</a></li>

                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Orders" asp-action="Index">Orders</a></li>
                        }
                    }
                </ul>
                @* ==================== UPDATED NAVIGATION BLOCK END ==================== *@

                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    @if (User?.Identity?.IsAuthenticated ?? false)
                    {
                        // Display the current username in the navigation bar
                        var uname = User?.FindFirst("Username")?.Value ?? User?.Identity?.Name ?? "Account";

                        // Show cart link for all authenticated users who are NOT admins
                        if (!User.IsInRole("ADMIN"))
                        {
                            <li class="nav-item">
                                <a asp-controller="Cart" asp-action="Index" class="nav-link"><i class="bi bi-bag"></i> Cart</a>
                            </li>
                        }

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle me-1"></i><span>@uname</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile">Profile</a></li>
                                <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout">Logout</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item"><a asp-controller="Account" asp-action="Login" class="nav-link">Login</a></li>
                        <li class="nav-item"><a asp-controller="Account" asp-action="Register" class="nav-link">Register</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <main class="container my-4 px-4">
        @RenderBody()
    </main>

    <footer class="footer-section bg-dark text-white pt-5 pb-4">
        <div class="container">
            <div class="row">

                <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                    <h5 class="text-uppercase mb-3">Bookory</h5>
                    <p class="text-white-50">
                        Your one-stop shop for all the books you love. Discover new worlds and adventures with our vast collection.
                    </p>
                </div>

                <div class="col-lg-2 col-md-6 mb-4 mb-lg-0">
                    <h5 class="text-uppercase mb-3">Quick Links</h5>
                    <ul class="list-unstyled footer-links ">
                        <li><a asp-controller="Home" asp-action="Index" class="text-decoration-none text-white">Home</a></li>
                        <li><a asp-controller="Books" asp-action="Index" class="text-decoration-none  text-white">Shop</a></li>
                        <li><a href="#" class="text-decoration-none  text-white">About Us</a></li>
                        <li><a href="#" class="text-decoration-none  text-white">Contact</a></li>
                    </ul>
                </div>

                <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                    <h5 class="text-uppercase mb-3">Contact Us</h5>
                    <ul class="list-unstyled text-white-50">
                        <li class="d-flex align-items-start mb-2">
                            <i class="bi bi-geo-alt-fill me-2 pt-1"></i>
                            <span>Saravanampati 641035,Coimbatore,Tamil Nadu</span>
                        </li>
                        <li class="d-flex align-items-center mb-2">
                            <i class="bi bi-telephone-fill me-2"></i>
                            <span>+91 9933354326</span>
                        </li>
                        <li class="d-flex align-items-center">
                            <i class="bi bi-envelope-fill me-2"></i>
                            <span>support@bookory.com</span>
                        </li>
                    </ul>
                </div>

                <div class="col-lg-3 col-md-6">
                    <h5 class="text-uppercase mb-3">Newsletter</h5>
                    <p class="text-white-50">Stay updated with our latest offers.</p>
                    <form>
                        <div class="input-group">
                            <input type="email" class="form-control" placeholder="Your email" aria-label="Your email">
                            <button class="btn btn-primary" type="button">Subscribe</button>
                        </div>
                    </form>
                </div>

            </div>

            <div class="row mt-5">
                <div class="col-12 text-center">
                    <a href="#" class="social-icon mx-2"><i class="bi bi-facebook"></i></a>
                    <a href="#" class="social-icon mx-2"><i class="bi bi-twitter-x"></i></a>
                    <a href="#" class="social-icon mx-2"><i class="bi bi-instagram"></i></a>
                    <a href="#" class="social-icon mx-2"><i class="bi bi-linkedin"></i></a>

                </div>
            </div>

            <div class="footer-bottom pt-4 mt-4 border-top">
                <p class="small text-center text-white-50 mb-0">
                    © 2025 BOOKORY • All rights reserved.
                </p>
            </div>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>